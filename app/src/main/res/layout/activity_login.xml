<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".Auth.Login">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg_one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hospital" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ts"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:src="@drawable/logoo"
            android:id="@+id/img"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="100dp"/>

        <TextView
            android:textStyle="bold"
            android:layout_below="@id/img"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/colorUtama"
            android:text="KOPERASI"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ts"
        android:layout_marginTop="1dp"
        android:orientation="vertical">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_edittext_background">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/black" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/countrycode"
                        android:background="@color/dark_gray" />


                    <com.rsah.koperasi.customfonts.AutoCompleteTextViewSFProDisplayRegular
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/countrycode"
                        android:background="@color/transparent"
                        android:hint="Email / nohp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_edittext_background">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lock_black_24dp"
                        android:tint="@color/black" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@+id/countrycode"
                        android:background="@color/dark_gray" />


                    <com.rsah.koperasi.customfonts.AutoCompleteTextViewSFProDisplayRegular
                        android:textSize="13dp"
                        android:background="@color/transparent"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/countrycode"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>


                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btn_login"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_primary"
                    android:text="Login"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Anda Lupa Password ?"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/lupaPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" Bantuan "
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>




            </LinearLayout>


        <TextView
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tidak Punya Akun?"
            android:textAlignment="center"
             />


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:padding="3dp"
            android:textStyle="bold"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#42B8DB" />

    </LinearLayout>

    <include layout="@layout/progress_loading"/>


</RelativeLayout>